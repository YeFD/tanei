<cu-custom bgColor="bg-gradual-green" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">关于塔内</view>
</cu-custom>
<scroll-view scroll-y>
  <swiper class="card-swiper round-dot margin-bottom" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper">
    <swiper-item wx:for="{{4}}" wx:key="index" class="{{cardCur==index?'cur':''}}">
      <view class="swiper-item">
        <image src="cloud://demo-vr23l.6465-demo-vr23l-1259081600/image/{{index+1}}.JPG" mode="aspectFill"></image>
      </view>
    </swiper-item>
  </swiper>
  <swiper class="screen-swiper round-dot margin-bottom" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500">
    <swiper-item wx:for="{{4}}">
      <image src="cloud://demo-vr23l.6465-demo-vr23l-1259081600/image/{{index+5}}.png" mode="aspectFill"></image>
    </swiper-item>
  </swiper>
  <view class="padding-sm">
    <view class="text-center">
      <text class="text-grey text-sm">Version 1.6.0</text>
    </view>
  </view>
</scroll-view>